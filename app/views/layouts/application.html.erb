<!DOCTYPE html>



<html>
  <head>
    <title>Starling Portfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- As a link -->
    <nav class="navbar navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/projects">Stephie Starling's Portfolio</a>
          <div class="align-right row">
            <% if user_signed_in? %>
              <%= button_to "Logout", destroy_user_session_path, method: :delete, :class => "btn btn-outline-warning"%>
            <% else %>
              <%= button_to "Login", new_user_session_path, method: :get, :class => "btn btn-outline-warning"%>
              <%= button_to "Sign Up", new_user_registration_path, method: :get, :class => "btn btn-outline-warning"%>
            <% end %>
        </div>
        
      </div>
    </nav>
    

    <div class="container">
      <%= yield %>
    </div>
    
    
  </body>
</html>
